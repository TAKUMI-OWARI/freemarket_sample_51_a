= render partial: 'shared/header_before_login'
%body.mypage
  = render partial: 'breadcrumb'
  %main.mypage-content
    .mypage-content__r-content
      %section.mypage-content__r-content__index
        .mypage-content__r-content__index__content.is-show2
          %h2.mypage-title.bold ポイント
          .side.light-list
            %nav.sidebar
              %ul.sidebar__nav#sidebar-active
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    所持ポイント
                    %p.float-right P 300
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    ポイント履歴
                    = fa_icon "chevron-right" 
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    ポイントの有効期限
                    = fa_icon "chevron-right" 
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    ポイントとは？
                    = fa_icon "chevron-right" 
    .side
      = render partial: 'sidebar'
= render partial: 'shared/app-banner'
= render partial: 'shared/footer'
.mercari-sell-btn
  .mercari-sell-btn__text 出品
  = link_to "https://www.mercari.com/jp/sell/" do
    = fa_icon 'camera', class: "camera"                    