= render partial: 'shared/header_before_login'
- breadcrumb :sales, class: "breadcrumbs"
= render 'shared/breadcrumbs'
%body.mypage
  %main.mypage-content
    .mypage-content__r-content
      %section.mypage-content__r-content__index
        .mypage-content__r-content__index__content.is-show2
          %h2.mypage-title.bold 売上・振込申請
          .side.light-list
            %nav.sidebar
              %ul.sidebar__nav#sidebar-active
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    現在の売上金
                    %p.float-right ¥1,000
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    売上履歴
                    = fa_icon "chevron-right" 
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    売上金の振込申請期限
                    = fa_icon "chevron-right" 
      %section.mypage-content__r-content__index.m-top40
        .mypage-content__r-content__index__content.is-show2
          .side.light-list
            %nav.sidebar
              %ul.sidebar__nav#sidebar-active
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    振込申請して現金を受け取る
                    = fa_icon "chevron-right" 
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    振込申請履歴
                    = fa_icon "chevron-right" 
                %li.sidebar__nav__list
                  = link_to "", class: "nav-list contact-item" do
                    振込申請スケジュール
                    = fa_icon "chevron-right"
    .side
      = render partial: 'sidebar'
= render partial: 'shared/app-banner'
= render partial: 'shared/footer'
.mercari-sell-btn
  .mercari-sell-btn__text 出品
  = link_to "https://www.mercari.com/jp/sell/" do
    = fa_icon 'camera', class: "camera"