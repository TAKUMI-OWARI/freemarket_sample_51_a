%body.markup-item-purchase-transaction-page
= render 'shared/header_2'
%main.mercari-transaction
  %section.mercari-transaction__container
    %section.mercari-transaction__container__messages
      .mercari-transaction__container__messages__1
        - if @product.exhibit_trading?
          %i.far.fa-clock
          %p 発送をお待ちください
        - if @product.exhibited?
          %i.fas.fa-check
          %p 取引が完了しました
      .mercari-transaction__container__messages__2
        - if @product.exhibit_trading?
          %p 出品者からの発送通知をお待ちください
        - if @product.exhibited?
          %p このたびはメルカリのご利用ありがとうございました。
    - if @product.exhibit_trading?
      %h2 購入が完了しました
    %section.mercari-transaction__container__transaction-item
      .mercari-transaction__container__transaction-item__inner
        .mercari-transaction__container__transaction-item__inner__item
          -if @product.product_images.present?
            %h3= image_tag image_url("#{@product.product_images.first.image}"), width: "128", height: "170"
          - else
            %h3= image_tag "noimage.png", width: "128", height: "170"
          %p= @product.name
    %section.mercari-transaction__container__price-box
      .mercari-transaction__container__price-box__text
        %p= number_to_currency(@product.price)
        %p 送料込み
    %section.mercari-transaction__container__buy-user-info
      .mercari-transaction__container__buy-user-info__inner
        %h3 配送先
        %address
          〒601-8343
          %br 
          京都府京都市南区吉祥院稲葉町24
          %br
          ヤマト運輸
= render 'shared/footer_2'