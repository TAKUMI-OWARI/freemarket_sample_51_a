- if user_signed_in?
  = render partial: 'shared/header_after_login'
- else
  = render partial: 'shared/header_before_login'
%main.mercari-search
  .mercari-search__search-side
    %form.search-form
      .search-form__sort
        並び替え
        %i.fas.fa-chevron-down
      .search-form__dropdown-content
        %h3 詳細検索
        %form.search-form-group
          %label
            %i.fas.fa-plus
            %span.search-list キーワードを追加する
          %input{type: "text", value: "jj", name: "keyword", placeholder: "例）値下げ", class: "input-default"}
        %form.search-form-group
          %label
            %i.fas.fa-list-ul
            %span カテゴリーを選択する
          .select-wrap
            %i.fas.fa-chevron-down
            %select{name: "category_root", class: "select-default"}
              %option{value: ""}すべて
              %option{value: "1", id: "1"}レディース
              %option{value: "2", id: "2"}メンズ
              %option{value: "3", id: "3"}ベビー・キッズ
              %option{value: "4", id: "4"}インテリア・住まい・小物
              %option{value: "5", id: "5"}本・音楽・ゲーム
              %option{value: "1328", id: "1328"}おもちゃ・ホビー・グッズ
              %option{value: "6", id: "6"}コスメ・香水・美容
              %option{value: "7", id: "7"}家電・スマホ・カメラ
              %option{value: "8", id: "8"}スポーツ・レジャー
              %option{value: "9", id: "9"}ハンドメイド
              %option{value: "1027", id: "1027"}チケット
              %option{value: "1318", id: "1318"}自動車・オートバイ
              %option{value: "10", id: "10"}その他
        %form.search-form-group
          %label
            %i.fas.fa-tag
            %span ブランド名から探す
          %input{type: "text", name: "brand_name", value: "", placeholder: "例）シャネル", class: "input-default"}
        %form.search-form-group
          %label
            %i.fas.fa-expand
            %span サイズを指定する
          .select-wrap
            %i.fas.fa-chevron-down
            %select{name: "size_group", class: "select-default"}
              %option{value: ""}すべて
              %option{value: "1", id: "1"}洋服のサイズ
              %option{value: "2", id: "2"}メンズ靴のサイズ
              %option{value: "3", id: "3"}レディース靴のサイズ
              %option{value: "6", id: "6"}スカートのサイズ
              %option{value: "7", id: "7"}キッズ服のサイズ
              %option{value: "8", id: "8"}ベビー・キッズ靴のサイズ
              %option{value: "9", id: "9"}ベビー服のサイズ
              %option{value: "14", id: "14"}テレビのサイズ
              %option{value: "17", id: "17"}カメラレンズのサイズ
              %option{value: "12", id: "12"}オートバイのサイズ
              %option{value: "13", id: "13"}ヘルメットのサイズ
              %option{value: "11", id: "11"}タイヤのサイズ
              %option{value: "18", id: "18"}スキーのサイズ
              %option{value: "15", id: "15"}スノーボードのサイズ
        %form.search-form-group-price
          %label
            %i.fas.fa-money-bill-alt
            %span 価格
          .select-wrap
            %i.fas.fa-chevron-down
            %select{name: "", class: "select-default"}
              %option{value: ""}選択してください
              %option{value: "300-1000"}300 ~ 1000
              %option{value: "1000-5000"}1000 ~ 5000
              %option{value: "5000-10000"}5000 ~ 10000
              %option{value: "10000-30000"}10000 ~ 30000
              %option{value: "30000-50000"}30000 ~ 50000
              %option{value: "50000"}50000 ~
          %input{type: "number", name: "price_min", value: "", placeholder: "¥ Min", class: "input-default"}
          %span ~
          %input{type: "number", name: "price_max", value: "", placeholder: "¥ Max", class: "input-default"}
        %form.search-form-group-checkbox
          %label
            %i.fas.fa-star
            %span 商品状態
          .checkbox-default
            %input{type: "checkbox", name: "condition_all", id: "condition_all", value: "1"}
            %i.far.fa-square
            %label{for: "condition-all"} すべて
          .checkbox-default
            %input{type: "checkbox", name: "item_condition_id[1]", id: "item_condition_id[1]", value: "1"}
            %i.far.fa-square
            %label{for: "item_condition_id[1]"} 新品、未使用
          .checkbox-default
            %input{type: "checkbox", name: "item_condition_id[2]", id: "item_condition_id[2]", value: "1"}
            %i.far.fa-square
            %label{for: "item_condition_id[2]"} 未使用に近い
          .checkbox-default
            %input{type: "checkbox", name: "item_condition_id[3]", id: "item_condition_id[3]", value: "1"}
            %i.far.fa-square
            %label{for: "item_condition_id[3]"} 目立った傷や汚れなし
          .checkbox-default
            %input{type: "checkbox", name: "item_condition_id[4]", id: "item_condition_id[4]", value: "1"}
            %i.far.fa-square
            %label{for: "item_condition_id[4]"} やや傷や汚れあり
          .checkbox-default
            %input{type: "checkbox", name: "item_condition_id[5]", id: "item_condition_id[5]", value: "1"}
            %i.far.fa-square
            %label{for: "item_condition_id[5]"} 傷や汚れあり
          .checkbox-default
            %input{type: "checkbox", name: "item_condition_id[6]", id: "item_condition_id[6]", value: "1"}
            %i.far.fa-square
            %label{for: "item_condition_id[6]"} 全体的に状態が悪い
        %form.search-form-group-checkbox
          %label
            %i.fas.fa-truck
            %span 配送料の負担
          .checkbox-default
            %input{type: "checkbox", name: "shipping_payer_all", id: "shipping_payer_all", value: "1"}
            %i.far.fa-square
            %label{for: "shipping_payer_all"} すべて
          .checkbox-default
            %input{type: "checkbox", name: "shipping_payer_id[1]", id: "shipping_payer_id[1]", value: "1"}
            %i.far.fa-square
            %label{for: "shipping_payer_id[1]"} 着払い(購入者負担)
          .checkbox-default
            %input{type: "checkbox", name: "shipping_payer_id[2]", id: "shipping_payer_id[2]", value: "1"}
            %i.far.fa-square
            %label{for: "shipping_payer_id[2]"} 送料込み(出品者負担)
        %form.search-form-group-checkbox
          %label
            %i.fas.fa-shopping-cart
            %span 販売状況
          .checkbox-default
            %input{type: "checkbox", name: "status_all", id: "status_all", value: "1"}
            %i.far.fa-square
            %label{for: "status_all"} すべて
          .checkbox-default
            %input{type: "checkbox", name: "status_on_sale", id: "status_on_sale", value: "1"}
            %i.far.fa-square
            %label{for: "status_on_sale"} 販売中
          .checkbox-default
            %input{type: "checkbox", name: "status_trading_sold_out", id: "status_trading_sold_out", value: "1"}
            %i.far.fa-square
            %label{for: "status_trading_sold_out"} 売り切れ
        .search-extend-btn
          .gray_btn クリア
          %button{type: "submit", class: "red_btn"} 完了
  .mercari-search__products-content
    %section
      %h2.search-result-title
      .search-result-number
      .products-box-content
        = render partial: "search_product"
%nav.pos-bottom
  %ul.pos-bottom__lists
    %li= link_to "メルカリ", root_path, class: "pos-bottom__lists__left-list"
    = fa_icon 'chevron-right', class: "chevron-right-3"
    %li.pos-bottom__lists__right-list
      キーワード
= render partial: 'shared/app-banner'
= render partial: 'shared/footer'
.mercari-sell-btn
  .mercari-sell-btn__text 出品
  = link_to new_product_path do
    = fa_icon 'camera', class: "camera"